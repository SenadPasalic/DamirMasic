@model DamirMasic.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}


<div id="container">
    <div class="mailContent mobileContent">
        <h2 style="color:white">Kontakt</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h4 style="color:white">Reklamiraj te se kod nas.<br>Ostavite komentar ili ideje uvezi mene, mojih textova ili stranice.</h4>
            <hr />
            <div class="form-group" style="color:white">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group" style="color:white">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group" style="color:white">
                @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <button style="float:right;margin-left:5px;" type="submit" value="Send" class="btn btn-success" id="button-panel">Pošalji <span class="fa fa-paper-plane-o" aria-hidden="true"></span></button>
                    <a href="/home/index/" style="float:right;" class="btn btn-danger"><span class="fa fa-arrow-left" aria-hidden="true"></span> Nazad</a>
                </div>
            </div>
        }
    </div>
</div>
